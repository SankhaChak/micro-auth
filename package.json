{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "User Authentication Management Service",
  "main": "index.js",
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ignore-pattern 'dist/**'",
    "lint:fix": "eslint --fix . --ignore-pattern 'dist/**'",
    "prepare": "husky",
    "dev": "cross-env NODE_ENV=dev nodemon src/index.ts",
    "build": "tsc",
    "test:watch": "jest --watch --runInBand",
    "test": "jest --no-cache --coverage --all --runInBand",
    "start": "ts-node src/index.ts",
    "migration:generate:dev": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:generate",
    "migration:run:dev": "cross-env NODE_ENV=dev typeorm-ts-node-commonjs migration:run -d src/data-source.ts",
    "migration:generate:prod": "cross-env NODE_ENV=production typeorm-ts-node-commonjs migration:generate",
    "migration:run:prod": "cross-env NODE_ENV=production typeorm-ts-node-commonjs migration:run -d src/data-source.ts"
  },
  "author": "Sankha Chakraborty <anonproductionspro@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/lodash": "4.17.5",
    "@types/node": "^16.11.10",
    "@types/supertest": "^6.0.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jwks-rsa": "^3.1.0",
    "lint-staged": "^15.2.7",
    "mock-jwks": "1.0.10",
    "nodemon": "^3.1.4",
    "pg": "^8.12.0",
    "prettier": "3.3.2",
    "reflect-metadata": "^0.2.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.2",
    "ts-node": "10.9.1",
    "typeorm": "^0.3.20",
    "typescript": "4.5.2",
    "typescript-eslint": "^7.16.0"
  },
  "lint-staged": {
    "*": [
      "pnpm format",
      "pnpm lint:fix"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-jwt": "^8.4.1",
    "express-validator": "^7.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "pg": "^8.4.0",
    "reflect-metadata": "^0.1.13",
    "rsa-pem-to-jwk": "^1.1.3",
    "typeorm": "0.3.20",
    "winston": "^3.13.1"
  }
}
